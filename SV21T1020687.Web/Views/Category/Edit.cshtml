@model Category
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post">
            <input type="hidden" name="@nameof(Model.CategoryId)" value="@Model.CategoryId" />
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input type="text" class="form-control" name="@nameof(Model.CategoryName)" value="@Model.CategoryName" placeholder="Nhập tên loại hàng..." autofocus>
                <p class="text-danger">@Html.ValidationMessage(nameof(Model.CategoryName))</p>
            </div>
            <div class="form-group">
                <label>Mô tả:</label>
                <textarea type="text" class="form-control" name="@nameof(Model.Description)" value="@Model.Description" placeholder="Nhập mô tả..."></textarea>
                <p class="text-danger">@Html.ValidationMessage(nameof(Model.Description))</p>

            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-primary">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>