@model Customer
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Customer/Save" method="post">
            <input type="hidden" name="@nameof(Model.CustomerId)" value="@Model.CustomerId"/>
            <div class="form-group">
                <label>Tên khách hàng:</label>
                <input type="text" class="form-control" name="@nameof(Model.CustomerName)" value="@Model.CustomerName" placeholder="Nhập tên khách hàng..." autofocus>
                @* @Html.TextBoxFor(m => m.CustomerName, new {@class = "form-control", @autofocus = "autofocus"}) *@
                <p class="text-danger">@Html.ValidationMessage(nameof(Model.CustomerName))</p>
            </div>
            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control" name="@nameof(Model.ContactName)" value="@Model.ContactName" placeholder="Nhập tên giao dịch...">
                <p class="text-danger">@Html.ValidationMessage(nameof(Model.ContactName))</p>
            </div>
            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone" placeholder="Nhập số điện thoại">
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" name="@nameof(Model.Email)" value="@Model.Email" placeholder="Nhập email">
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address" placeholder="Nhập địa chỉ">
            </div>
            <div class="form-group">
                <label>Tỉnh thành:</label>
                <select class="form-control js-select2" name="@nameof(Model.Province)">
                    <option value="">-- Chọn tỉnh thành</option>
                    @foreach (var province in CommonDataService.ListOfProvinces())
                    {
                        if (province.ProvinceName == Model.Province)
                        {
                            <option value="@province.ProvinceName" selected>@province.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@province.ProvinceName">@province.ProvinceName</option>
                        }
                    }
                </select>
                <p class="text-danger">@Html.ValidationMessageFor(m => m.Province)</p>
            </div>
            <div class="form-group">
                <label>Trạng thái:</label>
                <select class="form-control" name="@nameof(Model.IsLocked)">
                    @if (Model.IsLocked)
                    {
                        <option value="true" selected>Khách hàng bị khóa</option>
                        <option value="false">Khách hàng không bị khóa</option>
                    }
                    else
                    {
                        <option value="true">Khách hàng bị khóa</option>
                        <option value="false" selected>Khách hàng không bị khóa</option>
                    }

                </select>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Customer" class="btn btn-primary">
                    Quay lại  
                </a>
            </div>
        </form>
    </div>
</div>
<script>
    $(document).ready(function() {
        $('.js-select2').select2();
    });
</script>