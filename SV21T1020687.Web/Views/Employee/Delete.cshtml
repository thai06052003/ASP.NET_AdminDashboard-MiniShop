@model Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}
<style>
    .user-img {
        margin: 0 auto;
        /* width: 100px; */
        height: 100%;
        padding: 3px;
        border: 3px solid #d2d6de;
    }
</style>

<div class="box box-danger">
    <div class="box-body">
        <form action="~/Employee/Delete/@Model.EmployeeId" method="post">
            <div class="row">
                <!-- Thông tin nhân viên -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-2">
                            <img class="profile-user-img img-responsive img-bordered"
                                 alt="no-photo"
                                 src="~/images/employees/@(string.IsNullOrWhiteSpace(Model.Photo) ? "nophoto.png" : Model.Photo)">
                        </div>
                        <div class="col-sm-10">
                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <i class="fa fa-user"></i> @Model.FullName
                                </li>
                                <li class="list-group-item">
                                    <i class="fa fa-birthday-cake"></i> @Model.BirthDate
                                </li>   
                                <li class="list-group-item">
                                    <i class="fa fa-phone"></i> @Model.Phone
                                </li>
                                <li class="list-group-item">
                                    <i class="fa fa-envelope"></i> @Model.Email
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!--/Thông tin nhân viên-->
            </div>
            <div class="form-group text-right">
                @if (ViewBag.AllowDelete)
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                        Xóa dữ liệu
                    </button>
                }
                else
                {
                    <span style="color:#f00">Không được xóa khách hàng</span>
                }

                <a href="~/Employee" class="btn btn-primary">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>