@model Order
@{
    ViewBag.Title = "Cập nhật đơn hàng";
}

<div class="box box-primary">
    <div class="box-body form-horizontal">
        <form action="/Order/UpdateOrder" method="post">
            <input class="form-control" type="hidden" name="@nameof(@Model.OrderID)" value="@Model.OrderID" />
            <input class="form-control" type="hidden" name="@nameof(@Model.CustomerID)" value="@Model.CustomerID" />
            <input class="form-control" type="hidden" name="@nameof(@Model.ShipperID)" value="@Model.ShipperID" />
            <input class="form-control" type="hidden" name="@nameof(@Model.EmployeeID)" value="@Model.EmployeeID" />

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày lập đơn hàng:</label>
                <div class="col-sm-4">
                    <input class="form-control" name="@nameof(@Model.OrderTime)" value="@Model.OrderTime" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Nhân viên phụ trách:</label>
                <div class="col-sm-4">
                    <input class="form-control" name="@nameof(@Model.EmployeeName)" value="@Model.EmployeeName" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày nhận đơn hàng:</label>
                <div class="col-sm-4">
                    <input class="form-control" name="@nameof(@Model.FinishedTime)" value="@Model.FinishedTime" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Khách hàng:</label>
                <div class="col-sm-4">
                    <input class="form-control" name="@nameof(@Model.CustomerName)" value="@Model.CustomerName" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên giao dịch:</label>
                <div class="col-sm-4">
                    <input class="form-control" name="@nameof(@Model.CustomerContactName)" value="@Model.CustomerContactName" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <input class="form-control" name="@nameof(@Model.CustomerAddress)" value="@Model.CustomerAddress" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <input class="form-control" name="@nameof(@Model.CustomerEmail)" value="@Model.CustomerEmail" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ giao hàng:</label>
                <div class="col-sm-10">
                    <input class="form-control" name="@nameof(@Model.DeliveryAddress)" value="@Model.DeliveryAddress" />
                </div>
            </div>

            <div class="form-group">
                <label>Tỉnh thành:</label>
                <select class="form-control js-select2" name="@nameof(Model.DeliveryProvince)">
                    <option value="">-- Chọn tỉnh thành</option>
                    @foreach (var province in CommonDataService.ListOfProvinces())
                    {
                        if (province.ProvinceName == Model.DeliveryProvince)
                        {
                            <option value="@province.ProvinceName" selected>@province.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@province.ProvinceName">@province.ProvinceName</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Người giao hàng:</label>
                <div class="col-sm-4">
                    <input class="form-control" name="@nameof(@Model.ShipperName)" value="@Model.ShipperName" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-4">
                    <input class="form-control" name="@nameof(@Model.ShipperPhone)" value="@Model.ShipperPhone" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Nhận giao hàng lúc:</label>
                <div class="col-sm-4">
                    <input class="form-control" name="@nameof(@Model.ShippedTime)" value="@Model.ShippedTime" />
                </div>
            </div>

            <div class="form-group">
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Trạng thái đơn hàng:</label>
                <div class="col-sm-4">
                    <input class="form-control" name="@nameof(@Model.Status)" value="@Model.Status" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thời điểm hoàn tất:</label>
                <div class="col-sm-4">
                    <input class="form-control" name="@nameof(@Model.FinishedTime)" value="@Model.FinishedTime" />
                </div>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-floppy-o"></i>
                    Cập nhật
                </button>
                <a href="~/Order/Details/@Model.OrderID" class="btn btn-primary">
                    Quay lại
                </a>
            </div>
        </form>

    </div>
</div>
