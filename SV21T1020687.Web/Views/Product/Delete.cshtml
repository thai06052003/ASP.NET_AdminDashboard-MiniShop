@model Product;
@{
    ViewBag.Title = "Xóa mặt hàng";
}
<style>
    .user-img {
        margin: 0 auto;
        /* width: 100px; */
        height: 100%;
        padding: 3px;
        border: 3px solid #d2d6de;
    }
</style>

<div class="box box-danger">
    <div class="box-body">
        <form action="~/Product/Delete/@Model.ProductID" method="post">
            <div class="row">
                <!-- Thông tin mặt hàng  -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-2">
                            <img class="profile-user-img img-responsive img-bordered"
                                 alt="no-photo"
                                 src="~/images/products/@(string.IsNullOrWhiteSpace(Model.Photo) ? "nophoto.png" : Model.Photo)">
                        </div>
                        <div class="col-sm-10">
                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <strong>Tên mặt hàng:</strong> @Model.ProductName
                                </li>
                                <li class="list-group-item">
                                    <strong>Mô tả:</strong> @Model.ProductDescription
                                </li>
                                <li class="list-group-item">
                                    <strong>Tên mặt hàng:</strong> @Model.ProductName
                                </li>
                                <li class="list-group-item">
                                    <strong>Đơn vị tính:</strong> @Model.Unit
                                </li>
                                <li class="list-group-item">
                                    <strong>Giá tiền:</strong> @Model.Price VNĐ
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!--/Thông tin nhân viên-->
            </div>
            <div class="form-group text-right">
                @if (ViewBag.AllowDelete)
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                        Xóa dữ liệu
                    </button>
                }
                else
                {
                    <span style="color:#f00">Không được xóa mặt hàng</span>
                }
                <a href="~/Product" class="btn btn-primary">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>