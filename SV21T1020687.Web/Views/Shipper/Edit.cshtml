@model Shipper
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Save" method="post">
            <input type="hidden" name="@nameof(Model.ShipperId)" value="@Model.ShipperId" />
            <div class="form-group">
                <label>Tên người giao hàng:</label>
                <input type="text" class="form-control" name="@nameof(Model.ShipperName)" value="@Model.ShipperName" placeholder="Nhập tên người giao hàng" autofocus>
                <p class="text-danger">@Html.ValidationMessage(nameof(Model.ShipperName))</p>
            </div>
            <div class="form-group">
                <label>Điện thọai:</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone" placeholder="Nhập số điện thoại...">
                <p class="text-danger">@Html.ValidationMessage(nameof(Model.Phone))</p>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Shipper" class="btn btn-primary">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>