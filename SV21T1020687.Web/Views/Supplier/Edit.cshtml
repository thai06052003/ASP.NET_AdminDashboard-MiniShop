@model Supplier
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post" enctype="multipart/form-data">
            <input type="hidden" name="@nameof(Model.SupplierId)" value="@Model.SupplierId"/>
            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <input type="text" class="form-control" name="@nameof(Model.SupplierName)" value="@Model.SupplierName" placeholder="Nhập tên nhà cung cấp..." autofocus>
                <p class="text-danger">@Html.ValidationMessage(nameof(Model.SupplierName))</p>
            </div>
            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control" name="@nameof(Model.ContactName)" value="@Model.ContactName" placeholder="Nhập tên giao dịch...">
                <p class="text-danger">@Html.ValidationMessage(nameof(Model.ContactName))</p>
            </div>
            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone" placeholder="Nhập số điện thoại">
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" name="@nameof(Model.Email)" value="@Model.Email" placeholder="Nhập email">
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address" placeholder="Nhập địa chỉ">
            </div>
            <div class="form-group">
                <label>Tỉnh thành:</label>
                <select class="form-control js-select2" name="@nameof(Model.Province)">
                    <option value="">-- Chọn tỉnh thành</option>
                    @foreach (var province in CommonDataService.ListOfProvinces())
                    {
                        if (province.ProvinceName == Model.Province)
                        {
                            <option value="@province.ProvinceName" selected >@province.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@province.ProvinceName">@province.ProvinceName</option>
                        }
                    }
                </select>
                <p class="text-danger">@Html.ValidationMessageFor(m => m.Province)</p>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="@nameof(Model.Photo)" value="@Model.Photo" />
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/suppliers/@Model.Photo" class="img img-bordered" style="width:200px" alt="NoPhoto" />
                </div>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-primary">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>